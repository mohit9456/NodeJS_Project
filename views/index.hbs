<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Learn Coding- Blogs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="static/css/style.css">
    <script src="https://kit.fontawesome.com/63acc2c5e9.js" crossorigin="anonymous"></script>
  </head>
  <body>


    {{!-- NAVBAR SECTION --}}

    {{>navbar data=details}}


     {{!-- BANNER SECTION --}}

    <section class="banner1_section py-5 background-1">
      <div class="container">
        <div class="row">
          <div class="col-md-6 heading-2">
            <h1 class="heading-1">Welcome To CODING SMASHERS !!</h1>
            <p class="my-3 text-secondary" style="font-family:Coronetscript, cursive; font-size: 17px; font-weight: 700;">
              Browse my blogs and find out the best knowledge of Tech world from here. Its free!
            </p>
            <a href="/blogs"><button class="btn btn-dark my-3" style="font-family:Coronetscript, cursive; ">Explore here</button></a>
          </div>
          <div class="col-md-6 text-center">
            <img class="robot-img" src="https://www.pngall.com/wp-content/uploads/2018/03/Robot-PNG-Image-File.png"  alt="">
          </div>
        </div>
      </div>
    </section>



    {{!-- SLIDES SECTION --}}

    {{>slider slides = slides}}


  {{!-- SERVICES SECTION --}}

    <section class="py-4" id="services_section">

      <div class="container">
        <h1 class="text-center text-dark mt-3">Trending Tech</h1>
      <div class="row">

      {{#each services}}
        <div class="col-md-4 col-12 my-5">
          <div style="background-color: #f8f9f9; border-top: 3px solid #ec9d65; box-shadow: 0 1px 5px #00000033;" class="card h-100">
            <div class="card-body m-4">
              <div class="container text-center py-3">
                <i class="{{this.icon}} service_icon text-secondary"></i>
              </div>
              <h5 style=" font-size: 22px; font-weight: 700; margin-bottom: 20px;" class="card-title">{{this.title}}</h5>
              <p style=" font-size: 17px; font-weight: 500; font-family: 'Inconsolata', monospace;">{{this.description}}</p>
              <a style=" font-size: 20px; font-weight: 500; font-family: 'Mukta', sans-serif; text-decoration: none;" class="text-bg-info px-2 rounded" href="{{this.linkUrl}}">{{this.link}}</a>
            </div>
          </div>
        </div>
      {{/each}}


      </div>
      </div>
    </section>

    {{>footer}}

    <script src="static/js/index.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>

  
</html>